<script>
    let a = window.visualViewport.width;
    console.log(a);
    const b = document.getElementById('ForBigScreen');
    const c = document.getElementById('HamBurgerIcon');
    if(a>1000){
        b.hidden = false;
        c.hidden = true;
    }else{
        b.hidden = true;
        c.hidden = false;
    }
    window.addEventListener('resize',()=>{
        let a = window.visualViewport.width;
        const c = document.getElementById('HamBurgerIcon');
        console.log(a);
        let b = document.getElementById('ForBigScreen');
        if(a>1000){
            b.hidden = false;
            c.hidden = true;
        }else{
            b.hidden = true;
            c.hidden = false;
        }
    })

</script>

