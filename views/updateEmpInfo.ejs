<link rel="stylesheet" href="/css/updateEmployeeinvo.css">
<div id="mainContainer">
    <h1 class="subtitle is-1">Update Employee Info</h1>
 
    <div id="formContainer">     
        <h3 class="subtitle is-3"><label for="changeEmpInfo">Change employee personal info</label></h3>
        <form action="/admin/employeeManagement/update-form/<%= empInfo._id %>" id="changeEmpInfo" method="post">
            <div class="field">
                <label class="label" for="name">Name</label>
                <div class="control">
                    <input class="input"  type="text" value="<%= empInfo.name %>" id="name" name="name"><br>
                </div>
            </div>
        
            <div class="field">
                <label class="label" for="email">Email</label>
                <div class="control">
                    <input class="input" type="text" name="email" id="email" value="<%= empInfo.email %>">
                </div>
            </div>
            <div class="field">
                <input class="button is-link" type="submit">
            </div>
        </form>
    </div>
    

    <div id="reviewContaoner">
        <h3 class="subtitle is-3"><label for="MyReview">Change Reviews of <%=empInfo.name%></label></h3>
        <div>
            <%for(rev of empInfo.myReview){%>
                <article class="panel is-success"id="MyReview">
                        <p class="panel-heading" style="font-size: small;">
                            Score given by <%= rev.reviewedBy.name%>:&nbsp;
                            <span class="badge bg-dark""><%= rev.reviewScore%></span>
                        </p>
                        <!-- <a href="/admin/employeeManagement/ReviewView/<%= empInfo._id %>">‚úèÔ∏è</a> -->
                        <form action="/admin/employeeManagement/updateReview-form/?reviewOf=<%= empInfo._id %>&reviewedBy=<%= rev.reviewedBy._id %>" method="post">
                            <label class="radio" >
                            </label>
                            
                            <label class="radio panel-block" >
                                <input type="radio" name="feedback" id="" value="5" <% if(rev.reviewScore == 5) {%> checked <%}%> >BestüòÅ
    
                            </label>
    
                            <label class="radio panel-block" >
                                <input type="radio" name="feedback" id="" value="4" <% if(rev.reviewScore == 4) {%> checked <%}%> >GoodüôÇ
    
                            </label>
    
                            <label class="radio panel-block" >
                                <input type="radio" name="feedback" id="" value="3" <% if(rev.reviewScore == 3) {%> checked <%}%> >Oküòê
    
                            </label>
    
                            <label class="radio panel-block" >
                                <input type="radio" name="feedback" id="" value="2" <% if(rev.reviewScore == 2) {%> checked <%}%> >PoorüôÅ
    
                            </label>
    
                            <label class="radio panel-block" >
                                <input type="radio" name="feedback" id="" value="1" <% if(rev.reviewScore == 1) {%> checked <%}%> >very Poorüò°
    
                            </label>
                            <button type="submit" class="button is-link is-outlined is-fullwidth">
                                Update Review
                            </button>
                        </form>
                    </article>
                <%}%>
        </div>
    </div>
</div>